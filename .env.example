# .env file example

# Exclude specific containers by exact name
EXCLUDE_CONTAINERS=postgres-main,redis-cache

# Exclude containers by image pattern (substring match)
EXCLUDE_IMAGES=postgres,mysql,node:14

# Set log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable automatic updates
AUTO_UPDATE=true

#The expression format is: `minute hour day month day_of_week`
WATCHLESS_SCHEDULE=0 0 * * *